    <script>
        $(document).scroll(function () {
            if ($(this).scrollTop() > 200) {
                $('.n-header').addClass('header-scrolldown');
            } else {
                $('.n-header').removeClass('header-scrolldown');
            }
        });
        $(document).ready(function () {
            $("#UserRegisterForm").submit(function (e) {
                e.preventDefault();
                $(".errors").html(" ");
                $('#btn-submit-register').prop('disabled', true);
                $.post("/users/jregister", $("#UserRegisterForm").serialize(), function (data) {
                    var results = JSON.parse(data);
                    if (results.status == 1) {
                        window.location.replace("users/login.html");
                    } else {
                        var html = '';
                        results.msg.forEach(function (element) {
                            html += element + "<br>";
                        });
                        $(".errors").append(html);
                        $('#btn-submit-register').prop('disabled', false);
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#UserLoginForm").submit(function (e) {
                e.preventDefault();
                $('#btn-submit-login').prop('disabled', true);
                $.post("/users/jlogin", $("#UserLoginForm").serialize(), function (data) {
                    var results = JSON.parse(data);
                    if (results.status == 1) {
                        window.location.replace("index.html");
                    } else {
                        $.gritter.add({
                            title: 'Lỗi',
                            text: results.msg
                        });
                        $('#btn-submit-login').prop('disabled', false);
                    }
                });
            });
        });
    </script>
